<% @lists.each do |list| %>
<div class="block p-6 max-w-sm bg-gray-300 rounded-lg border border-gray-400 shadow-md hover:bg-gray-100">
  <h5 class="mb-5 text-2xl font-bold tracking-tight text-gray-900"><%= list.name %></h5>
  <p class="font-normal text-gray-700">
    <ul class="w-148 text-md font-medium text-gray-900 bg-white rounded-lg border border-gray-400">
    <% list.tasks.incomplete_first.each do |task| %>
      <% if task.complete? %>
      <li class="py-2 px-4 w-full rounded-t-lg border-b border-gray-200"><del><%= task.name %></del></li>
      <% else %>
      <li data-controller="task" class="py-2 px-4 w-full rounded-t-lg border-b border-gray-200">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="<%= dom_id(task) %>" data-id="<%= task.id %>" data-reflex="change->TaskReflex#complete">
          <label for="<%= dom_id(task) %>" class="custom-control-label"><%= task.name %></label>
        </div>
      </li>
      <% end %>
    <% end %>
    </ul>
  </p>
</div>
<% end %>
