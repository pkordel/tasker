<% @lists.each do |list| %>
  <div class="flex justify-center">
    <div class="block p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
      <h5 class="mb-5 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= list.name %></h5>
      <p class="font-normal text-gray-700 dark:text-gray-400">
        <ul class="w-148 text-md font-medium text-gray-900 bg-white rounded-lg border border-gray-200 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
        <% list.tasks.incomplete_first.each do |task| %>
          <% if task.complete? %>
          <li class="py-2 px-4 w-full rounded-t-lg border-b border-gray-200 dark:border-gray-600"><del><%= task.name %></del></li>
          <% else %>
          <li data-controller="task" class="py-2 px-4 w-full rounded-t-lg border-b border-gray-200 dark:border-gray-600">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="<%= dom_id(task) %>" data-id="<%= task.id %>" data-reflex="change->TaskReflex#complete">
              <label for="<%= dom_id(task) %>" class="custom-control-label"><%= task.name %></label>
            </div>
          </li>
          <% end %>
        <% end %>
        </ul>
      </p>
    </div>
  </div>
<% end %>
